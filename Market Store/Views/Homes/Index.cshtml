@model IEnumerable<Market_Store.Models.Home>

@{
    ViewData["Title"] = "Home-Index-Admin";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Text(1)
            </th>
            <th>
                Image(1)
            </th>
            <th>
                Image(2)
            </th>
            <th>
                Image(3)
            </th>
            <th>
                Text(2)
            </th>
            <th>
                Text(3)
            </th>
            <th>
                Image(4)
            </th>
            <th>
                Text(4)
            </th>
            <th> <a asp-action="Create" class="btn btn-facebook">Create New</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text1)
                </td>

                <td>
                    <img src="~/Images/@item.Imagename1" width="100px;" height="100px;" />
                </td>

                <td>
                    <img src="~/Images/@item.Imagename2" width="100px;" height="100px;" />
                </td>

                <td>
                    <img src="~/Images/@item.Imagename3" width="100px;" height="100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text3)
                </td>

                <td>
                    <img src="~/Images/@item.Imagename4" width="100px;" height="100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text4)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HId" class="btn btn-dark">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.HId" class="btn btn-success">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.HId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
