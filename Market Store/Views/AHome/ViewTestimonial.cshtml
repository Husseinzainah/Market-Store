
@model IEnumerable<Market_Store.Models.Testimonial>
@{
    ViewData["Title"] = "viewcontact";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<style>
    th {
        font-weight: bolder;
        text-align: center;
    }

    tr:hover {
        background-color: gray;
        color: white;
    }

    td {
        text-align: center;
    }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Testimonial In Manger</h4>
                        <p class="card-category">  View Testimonial Customer </p>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table" id="tableData">
                                <thead class=" text-primary">
                                <th>
                                    ID
                                </th>
                                <th>
                                   Masseges
                                </th>
                                <th>
                                    First Name
                                </th>
                               
                                @foreach (var item in Model)
                                {

                                    <tbody>
                                        <tr>
                                            <td>
                                                @item.TestId
                                            </td>
                                            <td>
                                                @item.Masseges
                                            </td>
                                            <td>
                                                @item.Customer.CustFname
                                            </td>
                                            

                                        </tr>

                                    </tbody>
                                }

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

