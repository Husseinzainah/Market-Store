<!--Note-->
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            @*<h3 class="mb-4 text-center">Sign Up </h3>*@
            <form class="signin-form" asp-action="Register" enctype="multipart/form-data">
                <div class=" row">
                    <div class="form-group col-6">
                        <input asp-for="CustFname" class="form-control" placeholder="First Name" required>
                    </div>

                    <div class="form-group  col-6" >
                        <input asp-for="CustLname" class="form-control" placeholder="Last Name" required>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group  col-6" >
                        <input asp-for="Phone" placeholder="Your Phone" class="form-control" required>
                    </div>
                    <div class="form-group  col-6" >
                        <input asp-for="Email" placeholder="Your E-mail" class="form-control" required>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group  col-6" >
                        <input asp-for="Password" placeholder=" Password" id="pass" name="pass" type="password" class="form-control" />

                    </div>
                    <div class="form-group col-6">
                        <input asp-for="Password" placeholder=" Repet Password" id="repass" name="repass" type="password" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <input asp-for="ImageFile" placeholder=" Repet Password" required class="form-control" />
                    </div>
                </div>
                   
                    <div class="row">
                        <div class="form-group   col-6">
                            <input type="submit" value="Register" class="form-control btn btn-primary submit px-3">
                        </div>
                        <div class="form-group  col-6">
                            <a asp-action="Login" asp-controller="LoginAndRegister" class="form-control btn btn-primary submit px-3">Back Login</a>
                        </div>
                    </div>
            </form>

        </div>
    </div>
</div>